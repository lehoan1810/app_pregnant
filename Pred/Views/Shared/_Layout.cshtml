@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Pred</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/footer.css" />
    <link href="~/css/site.css" rel="stylesheet" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js"></script>
    <link rel="stylesheet" href="./lib/fontawesome-free-5.14.0-web/css/all.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <link href="https://fonts.googleapis.com/css2?family=Quicksand:wght@300;400;500;600;700&family=Roboto:wght@100;900&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-danger box-shadow">
            <div class="container">
                <a class="navbar-brand text-white" asp-area="" asp-controller="Home" asp-action="Index">SP</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <partial name="_LoginPartial" />
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="AboutUs">Về Chúng Tôi</a>
                        </li>


                        @if (SignInManager.IsSignedIn(User))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="food">thực đơn</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Music">nhạc</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" href="/Identity/Note">Thêm ghi chú</a>
                            </li>

                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container-fluid" style="margin:0;padding:0">
        <main role="main">
            @RenderBody()
        </main>
    </div>


    <footer>
        <div class="container">
            <div class="box">
                <h3>Về chúng tôi</h3>
                <p>
                    Trang web được xây dựng nhằm đáp ứng đầy đủ nhu cầu của phụ nữ một cách tối ưu và hiệu quả
                </p>
            </div>
            <div class="box">
                <h3>Links</h3>
                <div class="box-item">
                    <a href="#">Home</a>
                </div>
                <div class="box-item">
                    <a href="#">About us</a>
                </div>
                <div class="box-item">
                    <a href="#">Products</a>
                </div>
                <div class="box-item">
                    <a href="#">Blog</a>
                </div>
                <div class="box-item">
                    <a href="#">Services</a>
                </div>
            </div>
            <div class="box">
                <h3>Follow Us</h3>
                <div>
                    <div class="box-item">
                        <a href="">
                            <i class="fa fa-facebook-square"></i>
                            <span>Facebook</span>
                        </a>
                    </div>
                    <div class="box-item">
                        <a href="#">
                            <i class="fa fa-google-plus-square"></i>
                            <span>Google +</span>
                        </a>
                    </div>
                    <div class="box-item">
                        <a href="">
                            <i class="fa fa-instagram"></i>
                            <span>Instagram</span>
                        </a>
                    </div>
                </div>
            </div>
            <div class="box instagram-api">
                <h3>Fanpage</h3>
                <div class="post-wrap">
                    <div>
                        <iframe src="https://www.facebook.com/plugins/page.php?href=https%3A%2F%2Fwww.facebook.com%2Fhotrophunumangthai&tabs=timeline&width=340&height=500&small_header=true&adapt_container_width=true&hide_cover=false&show_facepile=true&appId" width="340" height="340" style="border:none;overflow:hidden" scrolling="no" frameborder="0" allowfullscreen="true" allow="autoplay; clipboard-write; encrypted-media; picture-in-picture; web-share"></iframe>
                    </div>
                </div>
            </div>
        </div>

    </footer>
    <footer class="copyright">
        <div class="copy" >
            <a href="#">Copyright © 2021 .All rights reserved by Nhóm 27</a>
        </div>
    </footer>
    

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>

<style>
    * {
        font-family: Quicksand;
    }
</style>
